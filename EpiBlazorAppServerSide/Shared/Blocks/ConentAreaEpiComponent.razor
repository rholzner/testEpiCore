@using EPiServer;


<h3>ConentAreaEpiComponent</h3>


@if (contentItems == null)
{
<p><em>Loading...</em></p>
}
else
{
@foreach (var contentItem in contentItems)
{
<p>@contentItem</p>
<br />
}
}


@code {
  [Parameter]
  public IEnumerable<EPiServer.Core.ContentReference> contentArea { get; set; }

  private List<string>
  contentItems;

  protected override void OnParametersSet()
  {
  contentItems = new List<string>();
  if (!(contentArea is null))
  {
  foreach (var item in contentArea)
  {
  contentItems.Add(item.ToString());
  }
  }

  }
}

